{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "declaration": false,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES6", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "types": [
    "node",
    "mocha",
    "chai"         
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "!node_modules/@types"
  ]
}

