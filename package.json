{
  "name": "order-api",
  "version": "1.0.0",
  "description": "Order Management App",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf ./dist && rimraf reports",
    "build": "yar run clean && tsc",
    "start": "yarn run build && node ./dist/index.js",
    "dev": "cross-env PORT=3000 NODE_ENV=dev ts-node ./src/server.ts",
    "prod": "PORT=3000 yarn run start",
    "lint": "tslint ./src/**/*.ts ./test/**/*.spec.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.spec.ts -t verbose",
    "pre-test": "cross-env NODE_ENV=test yarn run build && yarn run lint",
    "test": "cross-env NODE_ENV=test mocha",
    "coverage": "nyc mocha",
    "test:coverage": "yarn run coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mycok/Order-API.git"
  },
  "keywords": [
    "Express",
    "Node",
    "Mongo",
    "Mongoose"
  ],
  "author": "mycok",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mycok/Order-API/issues"
  },
  "homepage": "https://github.com/mycok/Order-API#readme",
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn run test:coverage"
    }
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "prettier": "^2.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
